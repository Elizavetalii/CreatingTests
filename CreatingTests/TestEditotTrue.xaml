<Page x:Class="CreatingTests.TestEditotTrue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CreatingTests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestEditotTrue">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE0C0C0" Offset="0.018"/>
                <GradientStop Color="#FFFCE0E0" Offset="0.915"/>
                <GradientStop Color="#FF700000" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="AddEachQuestion" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" FontFamily="MingLiU-ExtB" FontSize="20" Margin="135,13,0,0"><Run Text="Add each question and 3 answer options to the table"/><LineBreak/><Run/></TextBlock>
        <DataGrid x:Name="DataGridTest" d:ItemsSource="{d:SampleData ItemCount=5}" CanUserAddRows="True"  Margin="0,55,0,0" FontFamily="MingLiU-ExtB" FontSize="22" />
    </Grid>
</Page>
